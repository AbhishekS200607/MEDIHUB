rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isDoctor() {
      return isAuthenticated() && getUserRole() == 'doctor';
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    // Users collection - prevent role changes
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId) && request.resource.data.role == 'patient';
      allow update: if isOwner(userId) && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Appointments - server-side only writes
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isDoctor() || isAdmin());
      allow create: if false; // Only via backend API
      allow update: if false; // Only via backend API
      allow delete: if false; // Only via backend API
    }
    
    // Patients - restricted access
    match /patients/{patientId} {
      allow read: if isDoctor() || isAdmin();
      allow write: if false; // Only via backend API
    }
    
    // Tokens - server-side only
    match /tokens/{tokenId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only via backend API
    }
    
    // Config - admin only
    match /config/{configId} {
      allow read: if isAdmin();
      allow write: if false; // Only via backend API
    }
  }
}
